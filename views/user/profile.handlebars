               <div class="col-6 col-sm-3">
              <p class="font-weight-normal"> {{{user.userName}}}</p>
            </div>
            {{else}}
               <div class="col-6 col-sm-3">
              <p class="font-weight-normal"> please update your userName</p>
            </div>
            {{/if}}
           

            <div class="w-100"></div>
              <div class="col-6 col-sm-3">
            <p class="font-weight-bold"> Family Name</p>
              </div>
            {{#if  user.familyname }}
               <div class="col-6 col-sm-3">
              <p class="font-weight-normal"> {{{user.familyname}}}</p>
            </div>
            {{else}}
               <div class="col-6 col-sm-3">
              <p class="font-weight-normal"> please update your familyname</p>
            </div>
            {{/if}}
                            <div class="w-100"></div>
