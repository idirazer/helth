              <p class="font-weight-normal"> {{{user.adress}}}</p>
            </div>
            {{else}}
               <div class="col-6 col-sm-3">
              <p class="font-weight-normal"> please update your adress</p>
            </div>
            {{/if}}
            
               <div class="w-100"></div>
                 <div class="col-6 col-sm-3">
                <p class="font-weight-bold"> Telephone Number</p>
                 </div>
             {{#if  user.telphon }}
               <div class="col-6 col-sm-3">
              <p class="font-weight-normal"> {{{user.telphon}}}</p>
            </div>
            {{else}}
               <div class="col-6 col-sm-3">
              <p class="font-weight-normal"> please update your telphon</p>
            </div>
            {{/if}}

            

            <div class="w-100"></div>

            <div class="col-6 col-sm-3">
              <p class="font-weight-bold"> Email</p>
            </div>
